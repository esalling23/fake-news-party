{{!-- Player Badge --}}
<section class="player-badge{{#if creator}} creator{{/if}}{{#if points}} voter{{/if}}">
	{{!-- <div class="badge"> --}}
	  <figure class="badge-face front">
		
		  <div class="player-background" {{#if points}}style="margin-top:-5%"{{/if}}>
			    <div class="player-static">
			    {{#if points}}
			        <div class="icon active voterWrapper" data-cycle-fx="flipHorz" data-cycle-speed="800" data-cycle-timeout="400" data-cycle-delay="100" data-cycle-loop="1" data-cycle-slides=".slide">

			        		<div class="slide">
				            <img src="https://res.cloudinary.com/engagement-lab-home/image/upload/c_scale,h_170,w_170/v1465930301/emerging-citizens/images/faces/avatar{{user.index}}.png" class="portrait" />
				          </div>
							
						        <div class="slide points">
						        	+{{points}}
						        </div>
			        </div>
			        {{else}}
			        <div class="icon active">
			            <img src="https://res.cloudinary.com/engagement-lab-home/image/upload/c_scale,h_170,w_170/v1465930301/emerging-citizens/images/faces/avatar{{user.index}}.png" class="portrait" />
			        </div>
		        {{/if}}

			        <div class="nameplate active{{#if hide_name}} hidden-el{{/if}}">

			            {{user.username}}

			        </div>

			        {{!-- {{#if score}}
				        <div class="score hidden-el">
				        	+{{score}}
				        </div>
				      {{/if}} --}}
			    </div>
			</div>
		
		</figure>

</section>