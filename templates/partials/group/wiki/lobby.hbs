<div class="page-container">
    <div class="row">
    
        {{> group/players_column_lobby players=players.left left=true }}

        {{!-- Room Code Container --}}
        <section class="col-lg-6 col-sm-6">
            <div id="game_code" class="row room-container hidden-el">
                <div class="col-lg-12 col-sm-12">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12" style="margin: 3% auto;">
                            <h1 class="wait-players game-header light bright-red-font">
                            Go to <span class="teal-font" style="padding-left:1%;"> 
                            {{#ifeq environment "production"}}
                                ecplay.org
                            {{else}}
                                qa.ecplay.org
                            {{/ifeq}}
                            </span><br />on your smartphone or tablet to join</h1>
                        </div>
                    </div>

                    <div class="row logo">
                        <img src="https://res.cloudinary.com/engagement-lab-home/image/upload/v1468424720/wiki_logo_ttiuji.png">
                    </div>

                    <div class="row">
                        <h3 class="light teal-font">Room Code:
                        </h3>

                        <h1 class="game-header light bright-red-font">
                            <span id="first">{{accessCodeSplit.[0]}}</span>
                            <span id="second">{{accessCodeSplit.[1]}}</span>
                            <span id="third">{{accessCodeSplit.[2]}}</span>
                            <span id="fourth">{{accessCodeSplit.[3]}}</span>
                        </h1>
                        <div class="form" id="startGameForm">

                            <input id="btn-start-game" data-event="game:tutorial" class="post-button submit" type="submit" name="submit" value="start" style="visibility:hidden">
                        
                        </div>
                    </div>

                    

                </div>
            </div>
        </section>
        
        {{> group/players_column_lobby players=players.right left=false }}
        
    </div>
</div>