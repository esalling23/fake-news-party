<div class="page-container">
    <div class="row">

        {{!-- Players left-hand column --}}
        {{> group/players_column players=players.left active=true offset=0 left=true }}
        
        {{!-- Room Code Container --}}
        <section class="col-sm-6 room-container" id="tweet-container">
        
            {{> shared/tweet text=tweetText}}
            
            <div style="margin-top:16%" class="row">
                <div class="col-lg-12">
                <h1 style="font-size: 3em;color: #ffa76d" class="game-header">make up a&nbsp;&nbsp;<span style="font-weight:bold;">hashtag!</span>
                    </h1>
                <h1 style="font-size: 2.4em;color: #85e4cc" class="game-header">(other players should think it's the real one)
                    </h1>

                </div>
            </div>
            <div class="row">

                <div id="clock-bg">
                    <div id="clock-face">
                        <img id="clock-hand" src="/images/layout/hyi/clockhand.png">
                    </div>
                </div>
            </div>

        </section>
        
        {{!-- Players right-hand column --}}
        {{> group/players_column players=players.right active=true offset=4 left=false }}

    </div>
</div>