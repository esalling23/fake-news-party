<div class="page-container">
    <div class="row">
        
        {{> group/players_column_lobby players=players.left offset=0 left=true }}

        {{!-- Room Code Container --}}
        <section class="col-lg-6 col-sm-6">
            <div id="game_code" class="row room-container hidden-el">
                <div class="col-lg-12 col-sm-12">
                    <h2 class="light" style="letter-spacing: -2px; font-size:3em;">Room Code:
                    </h2>
                    <h1 class="game-header bold">
                        <span id="first">{{accessCodeSplit.[0]}}</span>
                        <span id="second">{{accessCodeSplit.[1]}}</span>
                        <span id="third">{{accessCodeSplit.[2]}}</span>
                        <span id="fourth">{{accessCodeSplit.[3]}}</span>
                    </h1>

                    <div class="row">
                        <div class="col-lg-12 col-sm-12" style="margin: 3% auto;">
                            <h3 class="wait-players game-header green-font">
                            visit <em>
                            {{#ifeq environment "production"}}
                            ecplay.org
                            {{else}}
                            qa.ecplay.org
                            {{/ifeq}}
                            </em><br />on your smartphone or tablet<br />to join the game.</h3>
                            {{!-- <input id="btn_submit" data-event="game:start" class="button_text" type="submit" name="submit" value="Submit"> --}}
                        </div>
                    </div>

                    <div class="form" id="startGameForm">

                        <input id="btn-start-game" data-event="game:tutorial" class="post-button submit" type="submit" name="submit" value="start" style="visibility:hidden">
                    
                    </div>

                </div>
            </div>
        </section>
        
        {{> group/players_column_lobby players=players.right offset=4 left=false }}
        
    </div>
</div>