<div class="feed-wrap">
	<div id="post-feed" style="display:none">

		{{#each articles}}

			<div class="post" id="{{this.key}}">

				<div class="post-header row">
					<div class="user col-sm-8">

						<img class="profile-image" style="height:50px; width: 50px" src="{{../config.defProfPic.url}}">
						<div class="profile-name">{{this.user}} in {{this.location}}</div>

					</div>

					<div class="col-sm-4">
						<button class="btn submit share-btn">SHARE</button>
						<button class="btn submit ignore-btn">IGNORE</button>
					</div>
				</div>

				<div class="post-body row">

					<img class="post-image col-sm-4" style="height:100px; width: 100px;" src="{{this.cover.url}}">

					<div class="headline col-sm-8">{{this.name}}</div>

				</div>

				<div class="post-extra">

					<div class="description row">{{{this.description.html}}}</div>

					<div class="row">

						<div class="likes col-sm-4">Likes: 0{{this.likes}}</div>

						<div class="source col-sm-8">Source: {{this.source}}</div>

					</div>

					<div class="comment-text row">
						{{#each this.comments}}{{this}}{{/each}}
					</div>

					<div class="post-footer row">

						<p>Tag Options:</p>

						<ul class="tag-options">

							{{#each ../newsTypes}}

								<li>{{name}}</li>

							{{/each}}

						</ul>

					</div>

				</div>

			</div>

		{{/each}}

		<div class="loading"></div>

	</div>
</div>


